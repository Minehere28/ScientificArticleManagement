@{
    ViewData["Title"] = "Author Home";

    var topArticles = ViewBag.TopArticles as List<ScientificArticleManagement.Models.Article>;
    var newestArticles = ViewBag.NewestArticles as List<ScientificArticleManagement.Models.Article>;
    var articlesByTopic = ViewBag.ArticlesByTopic as Dictionary<int, List<ScientificArticleManagement.Models.Article>>;
    var topics = ViewBag.Topics as Dictionary<int, string>;
    ;
}

<section class="hero-section py-5 bg-light" id="section_1">
    <div class="container">
        <div class="row align-items-center">
            <!-- Left Column: Text + Search -->
            <div class="col-lg-6 col-12 mb-4 mb-lg-0">
                <h1 class="display-4 fw-bold mb-3">Explore Your Knowledge</h1>
                <p class="lead text-muted">Articles on coding, design, finance, marketing and more!</p>

                <!-- Search Form -->
                <form method="get" class="mt-4" role="search">
                    <div class="input-group input-group-lg">
                        <input name="keyword" type="search" class="form-control" placeholder="Search topics..." aria-label="Search">
                        <button type="submit" class="btn btn-primary">Search</button>
                    </div>
                </form>
            </div>

            <!-- Right Column: Image -->
            <div class="col-lg-6 col-12 text-center">
                <img src="/img/nckh.jpg")" class="img-fluid rounded shadow">
            </div>
        </div>
    </div>
</section>

<!-- Top Articles -->
<section class="explore-section section-padding bg-white" id="section_top">
    <div class="container">
        <div class="row justify-content-center mb-5">
            <div class="col-12 text-center">
                <h2 class="fw-bold">Top Articles</h2>
                <p class="text-muted">Những bài viết nổi bật được quan tâm nhiều nhất</p>
            </div>
        </div>

        <div class="row g-4">
            @foreach (var article in topArticles)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow rounded-4 overflow-hidden">
                        <!-- Nếu có ảnh đại diện bài viết, thay thế đường dẫn dưới đây -->
                        <img src="~/img/AI.jpg" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;">

                        <div class="card-body p-4 d-flex flex-column">
                            <h5 class="card-title fw-semibold mb-2">@article.Title</h5>
                            <p class="text-muted mb-1"><i class="bi bi-eye"></i> @article.CurrentView lượt xem</p>
                            <p class="text-muted"><i class="bi bi-calendar-event"></i> @article.SubmissionDate.ToString("dd/MM/yyyy")</p>
                            <div class="mt-auto">
                                <a href="@Url.Action("Details", "Articles", new { id = article.Id })" class="btn btn-primary w-100 rounded-pill">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>



<!-- Newest Articles -->
