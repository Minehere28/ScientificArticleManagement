                <p class="text-muted">Những bài viết cập nhật mới nhất</p>
            </div>
        </div>

        <div class="row g-4">
            @foreach (var article in newestArticles)
            {
                <div class="col-12 col-md-6 col-lg-4">
                    <div class="card h-100 border-0 shadow rounded-4 overflow-hidden">
                        <!-- Nếu có ảnh đại diện bài viết, thay thế đường dẫn dưới đây -->
                        <img src="~/img/AI.jpg" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;">

                        <div class="card-body p-4 d-flex flex-column">
                            <h5 class="card-title fw-semibold mb-2">@article.Title</h5>
                            <p class="text-muted mb-1"><i class="bi bi-eye"></i> @article.CurrentView lượt xem</p>
                            <p class="text-muted"><i class="bi bi-calendar-event"></i> @article.SubmissionDate.ToString("dd/MM/yyyy")</p>
                            <div class="mt-auto">
                                <a href="@Url.Action("Details", "Articles", new { id = article.Id })" class="btn btn-primary w-100 rounded-pill">Xem chi tiết</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
