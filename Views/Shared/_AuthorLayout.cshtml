<!DOCTYPE html>
<html lang="vi">
@{
    var userId = Context.Session.GetInt32("UserId");
    var username = Context.Session.GetString("Username") ?? "User";
    var role = Context.Session.GetString("Role") ?? "Author";
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - PaperHub</title>

    <!-- Font & Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <!-- CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    @* <link href="~/css/author-portal.css" rel="stylesheet"> *@
    @* @RenderSection("Styles", required: false) *@

    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --dark: #212529;
            --light: #f8f9fa;
            --border: #e9ecef;
        }

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f5f7fb;
        }
    </style>
</head>

<body>
    <!-- Main Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="@Url.Action("Index", "AuthorHome")">
                <i class="bi bi-journal-text me-2"></i>PaperHub
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "AuthorHome")">
                            <i class="bi bi-house-door me-1"></i> Home
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                            <i class="bi bi-collection me-1"></i> Articles
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="@Url.Action("All", "Articles")">
                                    <i class="bi bi-grid me-2"></i> All Articles
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("MyArticles", "Articles", new { id = userId })">
                                    <i class="bi bi-file-text me-2"></i> My Articles
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item" href="@Url.Action("Create", "Articles")">
                                    <i class="bi bi-plus-circle me-2"></i> New Article
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>

                <!-- User Dropdown -->
                <div class="ms-auto">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i> @username
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Details", "Users", new { id = userId })">
                                        <i class="bi bi-person me-2"></i> My Profile
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="@Url.Action("Edit", "Users", new { id = userId })">
                                        <i class="bi bi-gear me-2"></i> Settings
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item text-danger" href="@Url.Action("Logout", "Account")">
                                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Full Width Section (if any) -->
    @RenderSection("FullWidth", required: false)

    <!-- Main Content -->
    <main class="container py-4">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white-50 py-5">
        <!-- Thêm text-white-50 thay vì text-muted -->
        <div class="container">
            <div class="row g-4">
                <div class="col-lg-4">
                    <h5 class="mb-3 text-white">
                        <!-- Thêm text-white cho tiêu đề -->
                        <i class="bi bi-journal-text me-2 text-primary"></i>PaperHub 
                    </h5>
                    <p>A platform for researchers and authors to share knowledge.</p> 
                </div>

                <div class="col-lg-2 col-md-4">
                    <h6 class="mb-3 text-white">Quick Links</h6>
                    <ul class="nav flex-column">
                        <li class="nav-item mb-2">
                            <a href="@Url.Action("Index", "AuthorHome")" class="nav-link p-0 text-white-50">Home</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a href="@Url.Action("All", "Articles")" class="nav-link p-0 text-white-50">Articles</a>
                        </li>
                        <li class="nav-item mb-2">
                            <a href="#" class="nav-link p-0 text-white-50">About</a>
                        </li>
                    </ul>
                </div>

                <div class="col-lg-3 col-md-4">
                    <h6 class="mb-3 text-white">Contact</h6>
                    <ul class="nav flex-column">
                        <li class="mb-2">
                            <i class="bi bi-envelope me-2 text-primary"></i> contact@paperhub.org
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-telephone me-2 text-primary"></i> (123) 456-7890
                        </li>
                    </ul>
                </div>

            </div>

            <hr class="my-4 border-secondary">

            <div class="d-flex justify-content-between align-items-center">
                <div>
                    &copy; @DateTime.Now.Year PaperHub. All rights reserved.
                </div>
                <div>
                    <a href="#" class="text-white me-3"><i class="bi bi-twitter"></i></a>
                    <a href="#" class="text-white me-3"><i class="bi bi-facebook"></i></a>
                    <a href="#" class="text-white"><i class="bi bi-linkedin"></i></a>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/author-portal.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>